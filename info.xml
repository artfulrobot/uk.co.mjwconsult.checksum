<?xml version="1.0"?>
<extension key="uk.co.mjwconsult.checksum" type="module">
  <file>checksum</file>
  <name>Contact Checksum Utilities</name>
  <description>Access to checksum functionality via API and contact record</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Matthew Wire</author>
    <email>mjw@mjwconsult.co.uk</email>
  </maintainer>
  <urls>
